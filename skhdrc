# opens iTerm2
cmd - return : bash ~/.config/skhd/scripts/open_wezterm.sh

# Navigation
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# Moving windows
shift + cmd - h : yabai -m window --swap west
shift + cmd - j : yabai -m window --swap south
shift + cmd - k : yabai -m window --swap north
shift + cmd - l : yabai -m window --swap east

# Moving windows - warp
# shift + alt + ctrl - k : yabai -m window --warp west
# shift + alt + ctrl - n : yabai -m window --warp south
# shift + alt + ctrl - e : yabai -m window --warp north
# shift + alt + ctrl - i : yabai -m window --warp east

# Move focus container to workspace
shift + cmd - m : yabai -m window --space last; yabai -m space --focus last
shift + cmd - p : yabai -m window --space prev; yabai -m space --focus prev
shift + cmd - n : yabai -m window --space next; yabai -m space --focus next
shift + cmd - 1 : index=$(yabai -m query --spaces --display | jq '.[0].index') && yabai -m window --space $index && yabai -m space --focus $index
shift + cmd - 2 : index=$(yabai -m query --spaces --display | jq '.[1].index') && yabai -m window --space $index && yabai -m space --focus $index
shift + cmd - 3 : index=$(yabai -m query --spaces --display | jq '.[2].index') && yabai -m window --space $index && yabai -m space --focus $index
shift + cmd - 4 : index=$(yabai -m query --spaces --display | jq '.[3].index') && yabai -m window --space $index && yabai -m space --focus $index
shift + cmd - 5 : index=$(yabai -m query --spaces --display | jq '.[4].index') && yabai -m window --space $index && yabai -m space --focus $index
shift + cmd - 6 : index=$(yabai -m query --spaces --display | jq '.[5].index') && yabai -m window --space $index && yabai -m space --focus $index
shift + cmd - 7 : index=$(yabai -m query --spaces --display | jq '.[6].index') && yabai -m window --space $index && yabai -m space --focus $index
shift + cmd - 8 : index=$(yabai -m query --spaces --display | jq '.[7].index') && yabai -m window --space $index && yabai -m space --focus $index
shift + cmd - 9 : index=$(yabai -m query --spaces --display | jq '.[8].index') && yabai -m window --space $index && yabai -m space --focus $index

# focus space
cmd - 1 : yabai -m space --focus $(yabai -m query --spaces --display | jq '.[0].index')
cmd - 2 : yabai -m space --focus $(yabai -m query --spaces --display | jq '.[1].index')
cmd - 3 : yabai -m space --focus $(yabai -m query --spaces --display | jq '.[2].index')
cmd - 4 : yabai -m space --focus $(yabai -m query --spaces --display | jq '.[3].index')
cmd - 5 : yabai -m space --focus $(yabai -m query --spaces --display | jq '.[4].index')
cmd - 6 : yabai -m space --focus $(yabai -m query --spaces --display | jq '.[5].index')
cmd - 7 : yabai -m space --focus $(yabai -m query --spaces --display | jq '.[6].index')
cmd - 8 : yabai -m space --focus $(yabai -m query --spaces --display | jq '.[7].index')
cmd - 9 : yabai -m space --focus $(yabai -m query --spaces --display | jq '.[8].index')
cmd - n : yabai -m space --focus next
cmd - p : yabai -m space --focus prev
cmd - m : yabai -m space --focus last

# focus monitor
ctrl + cmd - 1: yabai -m display --focus 1
ctrl + cmd - 2: yabai -m display --focus 2
ctrl + cmd - 3: yabai -m display --focus 3

ctrl + shift + cmd - 1: yabai -m window --display 1 && yabai -m display --focus 1
ctrl + shift + cmd - 2: yabai -m window --display 2 && yabai -m display --focus 2
ctrl + shift + cmd - 3: yabai -m window --display 3 && yabai -m display --focus 3

# create desktop, move window and follow focus - uses jq for parsing json (brew install jq)
ctrl + cmd - n : yabai -m space --create && \
                  index=$(yabai -m query --spaces --display | jq '.[-1].index') && \
                  yabai -m window --space $index && \
                  yabai -m space --focus $index && \
                  echo "refresh" | nc -U /tmp/yabai-indicator.socket

# create desktop and follow focus - uses jq for parsing json (brew install jq)
ctrl + cmd - c : yabai -m space --create && \
                index=$(yabai -m query --spaces --display | jq '.[-1].index') && \
                yabai -m space --focus $index && \
                echo "refresh" | nc -U /tmp/yabai-indicator.socket

# destroy desktop
ctrl + cmd - d : \
    index="$(yabai -m query --spaces | jq '.[] | select(."has-focus").index')" && \
    if [ $index -gt 1 ]; then newindex=$(expr $index - 1); else newindex=$(expr $index + 1); fi && \
    yabai -m space --destroy && \
    yabai -m space --focus "${newindex}"

# Resize windows
ctrl + cmd - left : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
ctrl + cmd - down : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
ctrl + cmd - up : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
ctrl + cmd - right : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# Equalise size of windows
ctrl + cmd - e : yabai -m space --balance

# Enable / Disable gaps in current workspace
ctrl + cmd - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# Rotate windows clockwise and anticlockwise
cmd - r         : yabai -m space --rotate 90
shift + cmd - r : yabai -m space --rotate 270

# Rotate on X and Y Axis
shift + cmd - x : yabai -m space --mirror x-axis
shift + cmd - y : yabai -m space --mirror y-axis

# Set insertion point for focused container
shift + ctrl + cmd - h : yabai -m window --insert west
shift + ctrl + cmd - j : yabai -m window --insert south
shift + ctrl + cmd - k : yabai -m window --insert north
shift + ctrl + cmd - l : yabai -m window --insert east

# Float / Unfloat window
shift + cmd - space : \
    yabai -m window --toggle float; \
    yabai -m window --toggle border

# Restart Yabai
shift + ctrl + cmd - r : \
    /usr/bin/env osascript <<< \
        'display notification "Restarting yabai" with title "yabai"'; \
    launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# Make window native fullscreen
cmd - f         : yabai -m window --toggle zoom-fullscreen
shift + cmd - f : yabai -m window --toggle native-fullscreen
